doctype html
html(lang="en")
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(charset="UTF-8")
    block head
      meta(name="description" content="Classical-style paintings created by Tálos István")
      title Actual Homepage  
  body
    .my-container 
      block header
        header
          .js-nav--wrapper
            div
              nav.nav
                block nav
                  block nav
                  -const menu = [{ slug: '#home', title: 'Home', }, { slug: '#forsale', title: 'Pictures for Sale', }, { slug: '#sold', title: 'Sold Pictures', }, { slug: '#about', title: 'About me', }, { slug: '#contact', title: 'Contact', },]
                  each item, index in menu
                    a.js-nav--item.text__nav(href=item.slug, class=(index === menu.length - 1) ? 'nav--item__last' : '') #{item.title}
          .js-nav--menu 
            svg.menu-icon(width="30", height="25", viewBox="0 0 30 25")
              line.menu-line(x1="5", y1="6", x2="25", y2="6")
              line.menu-line(x1="5", y1="12.5", x2="25", y2="12.5")
              line.menu-line(x1="5", y1="19", x2="25", y2="19")

      block content
        main
        
      footer
        .links--wrapper
          a.footer--text__link(href="/impressum") Impressum
          span.footer-devider |
          a.footer--text__link(href="/privacy") Privacy Policy
        p.footer--text © 2024 Copyright Tálos István


    block scripts
      script(src="/dist/App.bundle.js")